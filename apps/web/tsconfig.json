{
  "extends": [
    "@atger/typescript-config"
  ],
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next.config.js",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "lib/**/**/*.ts",
    "lib/**/**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}